# BSER API Configuration
BSER_API_BASE_URL=https://open-api.bser.io
BSER_API_KEY=your_secure_api_key_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_very_secure_redis_password_minimum_32_characters
REDIS_DB=0

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate Limiting Configuration (더 엄격한 설정)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50

# Cache Configuration (프로덕션 최적화)
DEFAULT_CACHE_TTL=600
USER_CACHE_TTL=1800
RANK_CACHE_TTL=3600
STATS_CACHE_TTL=1800

# Queue Configuration (보수적 설정)
QUEUE_CONCURRENCY=2
QUEUE_MAX_ATTEMPTS=3
QUEUE_DELAY_MS=600

# Circuit Breaker Configuration (더 민감한 설정)
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_RESET_TIMEOUT=300000
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3

